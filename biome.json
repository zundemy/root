{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules/**/*", ".next/**/*", "out/**/*"]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"nursery": {
				"useSortedClasses": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
